{{#if sections.categories}}
<div class="post-content">
    <ul>
        {{#each sections.categories}}
            <li><a href="#{{this.slug}}">{{this.category_name}}</a></li>
  		{{/each}}
    </ul>
</div>


{{#each sections.categories}}
    <section id="{{this.slug}}" class="category-container">
        <h1>{{this.category_name}}</h1>
        <p>{{this.description}}</p>
        <ul>
        {{#each (limit this.products 3) }}
            {{#each (limit this.images 1) }}
                <li><img src="https://www.amaliacardo.it/images/work/{{this.uri}}_thumb.jpg" /></li>
            {{/each}}
        {{/each}}
         <li class="category-container__link">
             <a href="/{{this.slug}}.html">
                <span class="other-product">Altri prodotti nella categoria</span>
                <span>{{this.category_name}}</span>
            </a>
         </li>
     </ul>
    </section>
{{/each}}

{{/if}}
