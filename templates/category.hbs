<div class="content">
	<div class="content--wrapper">
		{{> menu}}
		<img class="logo" src="/images/logo.png" alt="logo Amalia cardo" />
	</div>
	<div class="column--second">
		<div class="logo--version--two">
			<a alt="Amalia Cardo Stilista, sarta e modellista a Firenze" href="/">
                <img class="logo" src="/images/logo.png" alt="logo Amalia Cardo"/>
            </a>
		</div>
		<div class="breadcrumb">
		{{#each breadcrumb}}
			<a href="/{{this.slug}}.html">{{this.label}}</a>&nbsp;&nbsp;<span class="space ">>>&nbsp;&nbsp;</span>
		{{/each}}
		</div>
		<h1 class="work__title">{{category_name}}</h1>
		<div class="description">{{{text}}}</div>
		<div class="thumb-list">
			
			{{#each products}}
				<a href="/{{this.slug}}.html" title="{{this.description}}">
					<img src="/images/work/{{this.thumb}}_thumb.jpg" alt={{this.alt}}/>
					<p class="black">{{this.title}}</p>
				</a>
			{{/each}}

		</div>
	</div>
</div>

<script src="js/work.min.js" async deferred></script>