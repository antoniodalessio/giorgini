{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "dist",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "paths": {
    "*": [
      "node_modules/"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/__tests__/*.*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}