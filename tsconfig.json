{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "outDir": "dist",
    "baseUrl": ".",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "paths": {
      "*": ["node_modules/*", "src/types/*"]
    }
  },
  "paths": {
    "*": [
      "node_modules/"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/__tests__/*.*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}